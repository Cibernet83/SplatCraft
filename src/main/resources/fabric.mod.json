{
  "schemaVersion": 1,
  "license": "MIT",
  "id": "splatcraft",
  "version": "${version}",

  "name": "Splatcraft",
  "description": "Splatoon in Minecraft.",
  "icon": "assets/splatcraft/icon.png",

  "authors": [
    "Cibernet",
    "Andante"
  ],
  "contributors": [],
  "contact": {
    "sources": "https://github.com/splatcraft/splatcraft",
    "issues": "https://github.com/splatcraft/splatcraft/issues"
  },

  "custom": {
    "cardinal-components": [
      "splatcraft:player_data",
      "splatcraft:lazy_player_data"
    ]
  },

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.cibernet.splatcraft.Splatcraft"
    ],
    "client": [
      "com.cibernet.splatcraft.SplatcraftClient"
    ],
    "server": [],

    "modmenu": [
      "com.cibernet.splatcraft.SplatcraftModMenu"
    ],
    "cardinal-components-entity": [
      "com.cibernet.splatcraft.SplatcraftCardinalComponents"
    ]
  },

  "mixins": [
    "splatcraft.mixins.json"
  ],
  "accessWidener": "splatcraft.accesswidener",

  "depends": {
    "fabricloader": ">=0.11",
    "fabric": ">=0.35.0",
    "minecraft": ">=1.17",
    "java": ">=16",

    "cardinal-components-entity": "*",
    "cloth-config2": ">=5.0.0",
    "chord": ">=1.8.0",
    "geckolib3": ">=3.0.0"
  },
  "recommends": {
    "canvas": "*"
  }
}
